{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    /* Modules */
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "node",
    /* Emit */
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "baseUrl": "./src",
    "lib": ["es2020", "DOM"],
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
