{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "ES2020",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": ["src", "src/types/custom.d.ts"],
  "exclude": ["node_modules", "../../node_modules", ".yalc"]
}
